{
  "manifest_version": 3,
  "name": "SCOPEOut",
  "version": "1.0.0",
  "description": "Generate AI-powered cover letters from SCOPE job postings using Gemini.",
  "icons": {
    "16": "assets/scope_out_icon.png",
    "32": "assets/scope_out_icon.png",
    "48": "assets/scope_out_icon.png",
    "128": "assets/scope_out_icon.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/scope_out_icon.png",
      "32": "assets/scope_out_icon.png",
      "48": "assets/scope_out_icon.png",
      "128": "assets/scope_out_icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://scope.sciencecoop.ubc.ca/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "preview/preview.html", 
        "preview/preview.css", 
        "preview/preview.js", 
        "prompt-editor/prompt-editor.html",
        "prompt-editor/prompt-editor.css",
        "prompt-editor/prompt-editor.js",
        "assets/science_coop_footer.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
